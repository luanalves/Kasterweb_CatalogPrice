<config>
    <tabs>
        <kasterweb_config>
            <label>Kasterweb</label>
            <sort_order>10</sort_order>
        </kasterweb_config>
    </tabs>
    <sections>
        <kasterweb_catalogpriceoptions translate="label" module="kasterweb_catalogprice">
            <label>Catalog Price Info</label>
            <tab>kasterweb_config</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="kasterweb_catalogprice">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="kasterweb_catalogprice">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <cash_discount translate="label comment" module="kasterweb_catalogprice">
                            <label>Cash Discount</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <sort_order>20</sort_order>
                            <comment>Discount by percentage</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cash_discount>
                        <parcels_without_interest translate="label comment" module="kasterweb_catalogprice">
                            <label>Quantity Of Parcels Without Interest</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <comment>Use only numbers - Use (.) separator</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </parcels_without_interest>
                        <parcel_value_minimun translate="label comment" module="kasterweb_catalogprice">
                            <label>Parcel Value Minimun</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <comment>Use only numbers</comment>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </parcel_value_minimun>
                        <table_parcels_without_interest translate="label comment" module="kasterweb_catalogprice">
                            <label>Table with information on installments and interest</label>
                            <frontend_model>kasterweb_catalogprice/adminhtml_system_config_form_field_tableparcels</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </table_parcels_without_interest>
                    </fields>
                </settings>
            </groups>
        </kasterweb_catalogpriceoptions>
    </sections>
</config>